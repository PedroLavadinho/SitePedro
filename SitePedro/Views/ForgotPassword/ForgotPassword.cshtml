@using System.Web.Mvc.Html
@using Umbraco.Web
@using SitePedro.Models
@using SitePedro.Controllers

@{
    var forgotPasswordModel = new ForgotPasswordModel();

    Html.EnableClientValidation();
    Html.EnableUnobtrusiveJavaScript();
}

    @using (Html.BeginUmbracoForm<ForgotPasswordController>("ForgotPassword"))
    {
        @Html.ValidationSummary("forgotPasswordModel", true)

        @Html.TextBoxFor(m => forgotPasswordModel.Email, htmlAttributes: new { @class = "form-control", @placeholder = "Email" })
        @Html.ValidationMessageFor(m => forgotPasswordModel.Email, "", new { @style = "color: #FF3535; text-shadow: 1px 1px #000000" })

        <input type="submit" class="form-control" name="submit" value="Recover Password">
    }
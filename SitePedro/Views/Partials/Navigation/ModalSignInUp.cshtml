@using System.Web.Mvc.Html
@inherits Umbraco.Web.Mvc.UmbracoViewPage

@{
    ViewBag.Title = "ModalSignInUp";
}
@if (!User.Identity.IsAuthenticated)
{
    <!-- MODAL -->
<section class="modal fade" id="modal-form" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content modal-popup">

            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div class="modal-body">
                <div class="container-fluid">
                    <div class="row">

                        <div class="col-md-12 col-sm-12">

                            <!-- NAV TABS -->
                            <ul class="nav nav-tabs" role="tablist">
                                <li class="active"><a href="#sign_up" aria-controls="sign_up" role="tab" data-toggle="tab">Create an account</a></li>
                                <li><a href="#sign_in" aria-controls="sign_in" role="tab" data-toggle="tab">Sign In</a></li>
                                <li><a href="#forgotpassword" aria-controls="forgotpassword" role="tab" data-toggle="tab">Forgot Password</a></li>
                            </ul>

                            <!-- TAB PANES -->
                            <div class="tab-content">
                                <div role="tabpanel" class="tab-pane fade in active" id="sign_up">
                                    @Html.Partial("~/Views/Register/Register.cshtml", new SitePedro.Models.RegisterModel())
                                </div>

                                <div role="tabpanel" class="tab-pane fade in" id="sign_in">
                                    @Html.Partial("~/Views/Login/Login.cshtml")
                                </div>

                                <div role="tabpanel" class="tab-pane fade in" id="forgotpassword">
                                    @Html.Partial("~/Views/ForgotPassword/ForgotPassword.cshtml")
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>

        </div>
    </div>
</section>
}
else
{
    <section class="modal fade" id="modal-form" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content modal-popup">

                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>

                <div class="modal-body">
                    <div class="container-fluid">
                        <div class="row">

                            <div class="col-md-12 col-sm-12">

                                <!-- NAV TABS -->
                                <ul class="nav nav-tabs" role="tablist">
                                    <li class="active"><a href="#sign_in" aria-controls="sign_in" role="tab" data-toggle="tab">Account</a></li>
                                </ul>

                                <!-- TAB PANES -->
                                <div class="tab-content">

                                    <div role="tabpanel" class="tab-pane fade in active" id="sign_in">
                                        @Html.Partial("~/Views/Login/Login.cshtml")
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>

            </div>
        </div>
    </section>
}